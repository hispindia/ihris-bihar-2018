<?xml version="1.0"?>   
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name='ReferenceField'>     
  <metadata>
    <displayName>Float</displayName>   
    <description>A module that allows the REFERENCE formfield </description>
    <version>4.1.11.0</version>    
    <link>https://launchpad.net/i2ce</link>
    <requirement name='forms'>
      <atLeast version='4.1'/>
      <lessThan version='4.2'/>
    </requirement>
    <path name='classes'>
      <value>./lib</value>
    </path>
  </metadata>
  
  <configurationGroup name="form_field" path="/modules/forms/FORMFIELD">
    <displayName>Form Fields</displayName>
    <description>Information about the various classes used to handle fields of a form</description>
    <configuration name="REFERENCE" values="single">
      <displayName>Float</displayName>
      <description>The class for a Float field</description>
      <value>I2CE_FormField_REFERENCE</value>
    </configuration>
  </configurationGroup> <!-- form_field -->

</I2CEConfiguration>


